{
  "name": "lxd-web-panel",
  "version": "1.0.0",
  "private": true,
  "description": "A web panel for LXD",
  "main": "index.js",
  "config": {
    "srcPath": "./src",
    "buildPath": "./dist",
    "devHost": "localhost",
    "devPort": 9000
  },
  "scripts": {
    "start-server": "cd ./server && npm start",
    "start-client": "cd ./client && npm start",
    "lint": "eslint --ext .json *.json && echo No linting errors."
  },
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "babel-eslint": "^5.0.0-beta6",
    "eslint": "^1.10.3",
    "eslint-plugin-json": "^1.1.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "ecmaFeatures": {
      "modules": true
    },
    "globals": {
      "describe": true,
      "it": true,
      "sinon": true
    },
    "parser": "babel-eslint",
    "plugins": [
        "json"
    ],
    "rules": {
      "strict": [
        2,
        "global"
      ],
      "indent": [
        2,
        2
      ],
      "quotes": [
        2,
        "single"
      ],
      "no-alert": 0,
      "no-underscore-dangle": 0
    }
  }
}
